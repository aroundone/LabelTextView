<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.foxmail.aroundme.labeltextview.MainActivity">

    <com.foxmail.aroundme.library.RoundRectLabelView
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_margin="3dp"
        android:layout_weight="1"
        app:labelBgColor="#FF8800"
        app:labelText="HOT"
        app:labelTextColor="@android:color/white"
        app:labelTextSize="8sp"
        app:labelWidthWeight="4.5"
        app:labelHeightWeight="1"
        app:labelTextPaddingBottom="-1dp"
        app:roundRectBorderWidth="0.5dp"
        app:roundRectBg="@android:color/white"
        app:roundRectRadius="18dp"
        app:contentText="Content"
        app:labelTextPaddingCenter="1.5dp"
        app:roundRectBorderBg="#b2b2b2"/>

    <com.foxmail.aroundme.library.RoundRectLabelView
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_margin="3dp"
        android:layout_weight="1"
        app:labelBgColor="#ff8800"
        app:labelText="NEW"
        app:labelTextColor="@android:color/white"
        app:labelTextSize="10sp"
        app:labelWidthWeight="4"
        app:labelHeightWeight="1"
        app:roundRectBg="@android:color/holo_blue_light"
        app:roundRectRadius="18dp"
        app:contentText="A"/>

    <com.foxmail.aroundme.library.RoundRectLabelView
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_margin="3dp"
        android:layout_weight="1"
        app:labelBgColor="@android:color/holo_blue_light"
        app:labelText="HOT"
        app:labelTextColor="@android:color/white"
        app:labelTextSize="8sp"
        app:labelWidthWeight="3"
        app:labelHeightWeight="1"
        app:roundRectBg="@android:color/holo_blue_light"
        app:roundRectRadius="18dp"
        app:contentText="B"
        app:contentTextColor="@android:color/holo_blue_light"
        />

</LinearLayout>
